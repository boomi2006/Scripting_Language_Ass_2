class Vehicle
  def initialize(make, model)
    @make = make
    @model = model
  end

  def check_fuel
    puts "Checking fuel level..."
  end

  def perform_maintenance
    puts "Performing maintenance for #{@make} #{@model}."
  end
end

class Car < Vehicle
  def open_trunk
    puts "Opening the car trunk."
  end
end

class Truck < Vehicle
  def load_cargo
    puts "Loading cargo into the truck."
  end
end

class Motorcycle < Vehicle
  def kick_start
    puts "Kick-starting the motorcycle."
  end
end

car = Car.new("Toyota", "Camry")
car.check_fuel
car.perform_maintenance
car.open_trunk

truck = Truck.new("Tata", "407")
truck.check_fuel
truck.load_cargo
